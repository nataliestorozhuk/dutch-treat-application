@page
@model DutchTreat.Views.App.IndexModel
@{
    ViewBag.Title = "Home Page";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Dutch Treat: @ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet" />

</head>
<body>
    @* <h2>@ViewBag.Title</h2> *@

    
    <div class="col-md-9">
    <div class="product-info">
        <img src="~/img/download.jpg" />
        <h3>Mug</h3>
        <ul class="product-props">
            <li>Price: $9.99</li>
            <li>Artist: Van Gogh</li>
            <li>Title: </li>
            <li>Description: Self-portrait</li>
        </ul>
        <button id="buyButton" class="btn btn-success">Buy</button>
    </div>


    <!--form means: I want to get info from the user-->
    <div id="theForm">
        <form>
            <label>Your Name:</label>
            <br />
            <input />
            <br />
            <label>Email:</label>
            <br />
            <input type="email" />
            <br />
            <label>Subject:</label>
            <br />
            <!--text is the default-->
            <input type="text" />
            <br />
            <label>Message:</label>
            <br />
            <textarea rows="4"></textarea>
            <br />
            <input type="submit" value="Send Message" />
        </form>
    </div>
  

    <div>
    <div id="loginToggle">Login</div>
        <form class="popup-form">
            <div>
                <label>Username</label>
                <input />
            </div>
            <div>
                <label>Password</label>
                <input type="password" />
            </div>
            <div>
                <input type="checkbox" />
                <label>Remember me?</label>
            </div>
            <div>
                <input type="submit" value="Login" />
            </div>
        </form>
    </div>
    </div>
    <div class="col-md-3">
        <p>
            This is a fun site to do some buying of dutch products
        </p>
    </div>
       



        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/js/index.js"></script>
</body>
</html>